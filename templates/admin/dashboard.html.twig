            'icon' : 'fa fa-file-image-o'
        }) }}
        {{ sonata_block_render({ 'type': 'admin.block.service.stats' }, {
            'entity' : 'VideoGamesRecords\\CoreBundle\\Entity\\Game',
            'repository_method' : 'countStatusCompleted',
            'title' : 'COMPLETED',
            'url' : '/admin/videogamesrecords/core/game/list?filter%5Bstatus%5D%5Bvalue%5D=COMPLETED',
            'css_class' : 'bg-gray-active',
