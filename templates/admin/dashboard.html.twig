{% extends '@SonataAdmin/standard_layout.html.twig' %}
{% block content %}
    <h2>Game</h2>
    <div class="row">
        {{ sonata_block_render({ 'type': 'admin.block.service.stats' }, {
            'entity' : 'VideoGamesRecords\\CoreBundle\\Entity\\Game',
            'repository_method' : 'countStatusCreated',
            'title' : 'CREATED',
            'url' : '/admin/videogamesrecords/core/game/list?filter%5Bstatus%5D%5Bvalue%5D=CREATED',
            'css_class' : 'bg-gray-active',
            'icon' : 'fa fa-pencil'
        }) }}
        {{ sonata_block_render({ 'type': 'admin.block.service.stats' }, {
            'entity' : 'VideoGamesRecords\\CoreBundle\\Entity\\Game',
