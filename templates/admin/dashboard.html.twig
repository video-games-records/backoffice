            'css_class' : 'bg-gray-active',
            'icon' : 'fa fa-file-image-o'
        }) }}
    </div>
    <h2>Proof Request</h2>
    <div class="row">
        {{ sonata_block_render({ 'type': 'admin.block.service.stats' }, {
            'entity' : 'VideoGamesRecords\\CoreBundle\\Entity\\ProofRequest',
            'repository_method' : 'countInProgress',
            'title' : 'IN PROGESS',
            'url' : '/admin/videogamesrecords/core/proofrequest/list?filter%5Bstatus%5D%5Bvalue%5D=IN+PROGRESS',
            'css_class' : 'bg-gray-active',
            'icon' : 'fa fa-exclamation-triangle'
        }) }}
    </div>
    <h2>Proof</h2>
    <div class="row">
        {{ sonata_block_render({ 'type': 'admin.block.service.stats' }, {
            'entity' : 'VideoGamesRecords\\CoreBundle\\Entity\\Proof',
